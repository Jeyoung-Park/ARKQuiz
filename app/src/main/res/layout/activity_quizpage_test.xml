<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2E2A"
    tools:context=".QuizpageTest"
    android:fontFamily="@font/goyangdeogyangb">

    <Button
        android:id="@+id/btn_test_home"
        android:layout_width="60dp"
        android:layout_height="63dp"
        android:background="@drawable/ark_quiz_main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.014"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.007" />

    <TextView
        android:id="@+id/TextView_test_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 pts"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/TextView_test_numberOfQuiz"
        app:layout_constraintBottom_toBottomOf="@id/TextView_test_numberOfQuiz"
        android:layout_marginLeft="20dp"></TextView>

    <TextView
        android:id="@+id/TextView_test_numberOfQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_test_home"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        ></TextView>

    <TextView
        android:id="@+id/TextView_test_dino_egg"
        android:layout_width="122dp"
        android:layout_height="24dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/stroke"
        android:gravity="center"
        android:text="DinoBoneCount"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022"
        android:fontFamily="@font/goyangdeogyangb"/>

    <ImageView
        android:id="@+id/ImageView_test_dino_head"
        android:layout_width="32dp"
        android:layout_height="29dp"
        android:layout_marginStart="252dp"
        android:layout_marginLeft="252dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.018"
        app:srcCompat="@drawable/dinohead" />

    <ImageView
        android:id="@+id/ImageView_test_rankingPoint"
        android:layout_width="32dp"
        android:layout_height="29dp"
        app:layout_constraintTop_toTopOf="@id/TextView_test_rankingPoint"
        app:layout_constraintBottom_toBottomOf="@id/TextView_test_rankingPoint"
        app:layout_constraintRight_toLeftOf="@id/TextView_test_rankingPoint"
        app:srcCompat="@drawable/point_icon_2" />

    <TextView
        android:id="@+id/TextView_test_rankingPoint"
        android:layout_width="122dp"
        android:layout_height="24dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/stroke"
        android:text="Ranking Point"
        app:layout_constraintTop_toBottomOf="@id/TextView_test_dino_egg"
        app:layout_constraintLeft_toLeftOf="@id/TextView_test_dino_egg"
        app:layout_constraintRight_toRightOf="@id/TextView_test_dino_egg"
        android:textSize="13sp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/goyangdeogyangb"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toRightOf="@id/TextView_test_quiz"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TextView_test_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TextView_test_numberOfQuiz"
        app:layout_constraintBottom_toTopOf="@id/ImageView_test_quiz_image"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"
        android:fontFamily="@font/goyangdeogyangb"/>

    <ImageView
        android:id="@+id/ImageView_test_quiz_image"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/btn_test_selection1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TextView_test_quiz"></ImageView>


    <Button
        android:id="@+id/btn_test_selection1"
        android:layout_width="274dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/click"
        android:text="show 1"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_test_selection2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/goyangdeogyangb"/>

    <Button
        android:id="@+id/btn_test_selection2"
        android:layout_width="274dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/click"
        android:text="show 2"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_test_selection3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/goyangdeogyangb"/>

    <Button
        android:id="@+id/btn_test_selection3"
        android:layout_width="274dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/click"
        android:text="show 3"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_test_selection4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/goyangdeogyangb"/>

    <Button
        android:id="@+id/btn_test_selection4"
        android:layout_width="274dp"
        android:layout_height="40dp"
        android:layout_marginBottom="90dp"
        android:background="@drawable/click"
        android:text="show 4"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/goyangdeogyangb"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_test_selection4"
        app:layout_constraintVertical_bias="0.202">

        <Button
            android:id="@+id/btn_test_hint_by_dinoegg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:text="Hint🔍 \n (Use dinobone)"></Button>

        <Button
            android:id="@+id/btn_test_hint_by_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:text="Hint 🎞 \n (Watch AD)"></Button>
    </LinearLayout>

